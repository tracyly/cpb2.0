<?xml version="1.0" encoding="utf-8"?>
<com.fenghuang.baselib.widget.round.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_104"
    android:layout_height="89dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:rv_backgroundColor="@color/white"
    app:rv_cornerRadius="5dp"
    android:layout_marginEnd="@dimen/dp_5"
    android:layout_marginStart="@dimen/dp_5"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginBottom="@dimen/dp_5"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvCloseVideo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_333333"
        android:gravity="center"
        android:paddingStart="@dimen/dp_15"
        android:drawableStart="@mipmap/ic_live_close"
        android:text="@string/live_room_close_menu"
        tools:ignore="RtlSymmetry" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/color_EEEEEE"/>
    <TextView
        android:id="@+id/tvClearChat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_333333"
        android:gravity="center"
        android:paddingStart="@dimen/dp_15"
        android:drawableStart="@mipmap/ic_live_clear_screen"
        android:text="@string/live_room_clear_chat"
        tools:ignore="RtlSymmetry" />
    <View
        android:id="@+id/linTwo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:visibility="gone"
        android:background="@color/color_EEEEEE"/>
    <TextView
        android:id="@+id/tvManageClear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_333333"
        android:gravity="center"
        android:visibility="gone"
        android:paddingStart="@dimen/dp_15"
        android:drawableStart="@mipmap/ic_live_manage_clear"
        android:text="@string/live_room_manage_chat_clear"
        tools:ignore="RtlSymmetry" />

</com.fenghuang.baselib.widget.round.RoundLinearLayout>